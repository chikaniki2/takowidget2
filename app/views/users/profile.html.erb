<h3>プロフィール編集</h3>

<% if  flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with model: @user, local: true do |f| %>

  <div>
    <div>
      <%= f.label :description ,"自己紹介" %>
    </div>
    <div>
      <%= f.text_area :description, value:@user.description, class:'form-control' %>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :description ,"お気に入り武器" %>
    </div>
    <div>
      <%= f.collection_select :favorite_weapon_id, @weapons, :id, :name, {selected:@favorite_weapon_id}, {class:"select_pull"} %>
    </div>
  </div>

  <div>
    <%= f.submit "プロフィールを更新する", class: "btn btn-primary" %>
  </div>

<% end %>
