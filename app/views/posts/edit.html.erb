<%= form_with model: @post, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :map_id, "map" %></th>
      <td><%= f.collection_select(:map_id, @maps, :id, :name) %></td>
    </tr>
    <tr>
      <th><%= f.label :rule_id, "rule" %></th>
      <td><%= f.collection_select(:rule_id, @rules, :id, :name) %></td>
    </tr>
    <tr>
      <th><%= f.label :weapon_id, "weapon" %></th>
      <td><%= f.collection_select(:weapon_id, @weapons, :id, :name) %></td>
    </tr>
    <tr>
      <th><%= f.label :description, "メモ" %></th>
      <td><%= f.text_field :description %></td>
    </tr>
  </table>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div>
    <ul>
      <li><%= f.submit "登録する"%></li>
      <li><%= link_to "一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>
<%= javascript_pack_tag 'select_change' %>
